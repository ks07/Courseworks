export CLASSPATH=.:/usr/share/java/stringtemplate.jar:/usr/share/java/antlr3.jar:/usr/share/java/antlr3-runtime.jar
if test -z "$1"
then
  echo CS USAGE: antlr3 t.g, then antlr3 *.java, then antlr3 Main
  java org.antlr.Tool "$@"
else case "$1" in
  *.java)
    javac "$@"
    ;;
  *.g)
    java org.antlr.Tool "$@"
    ;;
  *)
    java "$@"
    ;;
esac fi
